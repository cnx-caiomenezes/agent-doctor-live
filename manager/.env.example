# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agent_doctor_live
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=manager:
REDIS_SESSION_TTL=86400

# JWT Authentication (RS256)
# Generate keys: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -outform PEM -pubout -out public.pem
JWT_ACCESS_SECRET=<paste-RS256-private-key-here>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=<paste-RS256-private-key-here>
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# File Uploads (Knowledge Base)
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/pdf
UPLOAD_TEMP_DIR=/tmp/uploads

# S3/MinIO (for PDF storage before processing)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_S3_BUCKET=conexa-knowledge-base
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_FORCE_PATH_STYLE=true

# OpenAI (for embeddings)
OPENAI_API_KEY=<your-openai-key>
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=768

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_UPLOAD=5
